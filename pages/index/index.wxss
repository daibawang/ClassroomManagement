.head-img-bg1{
  position: absolute;
  margin-top: 61rpx;
  margin-left: 48rpx;
  width: 145rpx;
  height: 145rpx;
  border-radius: 50%;
  opacity: 0.4;
  background: #FBFBFB;
  z-index: -1;
}
.head-img-bg1::before,.head-img-bg1::after{
  content: "";
  position: absolute;
  margin-left: auto;
  margin-right: auto;
  top:50%;
  transform:translate(0, -50%) scale(1);
  background:#FBFBFB;
  border-radius:300px;
  z-index:0;
}
.head-img-bg1::before{
			width: 145rpx;
              height: 145rpx;
              transform:translate(0, -50%) scale(0);
              animation:flareScale 1.8s .5s infinite ease-out;
		}
		.head-img-bg1::after{
			width: 145rpx;
              height: 145rpx;
              transform:translate(0, -50%) scale(0);
              animation:flareScale 1.8s infinite ease-out;
		}
		@keyframes flareScale {
  0%{
   transform:translate(0, -50%) scale(.3);
  }
  100%{
    transform:translate(0, -50%) scale(1.6);
    opacity:0;
  }
}
